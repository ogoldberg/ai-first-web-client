{
  "name": "llm-browser",
  "version": "0.5.0",
  "description": "Web browser for AI agents. Learns from every interaction, discovers APIs, and progressively optimizes - 10x faster on repeated access.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./sdk": "./dist/sdk.js"
  },
  "bin": {
    "llm-browser": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:packages": "npm run build -w packages/core && npm run build -w packages/mcp",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "inspect": "node --inspect dist/index.js",
    "test": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:coverage": "vitest run --coverage --config ./vitest.config.ts",
    "clean": "rm -rf dist packages/*/dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "llm",
    "ai-agent",
    "mcp",
    "model-context-protocol",
    "claude",
    "openai",
    "anthropic",
    "browser-automation",
    "web-scraping",
    "api-discovery",
    "headless-browser",
    "playwright",
    "content-extraction",
    "web-automation",
    "machine-learning",
    "rag",
    "retrieval-augmented-generation",
    "semantic-embeddings"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/llm-browser.git"
  },
  "homepage": "https://github.com/anthropics/llm-browser#readme",
  "bugs": {
    "url": "https://github.com/anthropics/llm-browser/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/pino": "^7.0.4",
    "cheerio": "^1.0.0",
    "js-yaml": "^4.1.1",
    "linkedom": "^0.18.12",
    "pdf-parse": "^1.1.1",
    "pino": "^10.1.0",
    "tough-cookie": "^6.0.0",
    "turndown": "^7.2.0",
    "zod": "^4.2.1"
  },
  "optionalDependencies": {
    "@lancedb/lancedb": "^0.23.0",
    "@prisma/client": "^6.9.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^12.5.0",
    "playwright": "^1.48.0",
    "prisma": "^6.9.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.8.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/tough-cookie": "^4.0.5",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

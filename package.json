{
  "name": "llm-browser",
  "version": "0.5.0",
  "description": "A web browser where the user is an LLM, not a human. MCP server for machine-first web access with learning, API discovery, and progressive optimization.",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./sdk": "./dist/sdk.js"
  },
  "bin": {
    "llm-browser": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "inspect": "node --inspect dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "llm",
    "mcp",
    "model-context-protocol",
    "browser",
    "ai-agent",
    "web-scraping",
    "api-discovery",
    "machine-readable",
    "claude",
    "openai",
    "anthropic",
    "web-automation",
    "headless-browser",
    "semantic-embeddings"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/llm-browser"
  },
  "homepage": "https://github.com/anthropics/llm-browser#readme",
  "bugs": {
    "url": "https://github.com/anthropics/llm-browser/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/pino": "^7.0.4",
    "cheerio": "^1.0.0",
    "js-yaml": "^4.1.1",
    "linkedom": "^0.18.12",
    "pdf-parse": "^1.1.1",
    "pino": "^10.1.0",
    "tough-cookie": "^6.0.0",
    "turndown": "^7.2.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.0",
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.8.4",
    "@types/pdf-parse": "^1.1.4",
    "@types/tough-cookie": "^4.0.5",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

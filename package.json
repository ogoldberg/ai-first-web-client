{
  "name": "llm-browser-mcp",
  "version": "0.4.0",
  "description": "LLM-first browser MCP server with API discovery, session management, and intelligent optimization",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "llm-browser": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
